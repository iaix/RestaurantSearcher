@using OdeToFood.Core
@model Restaurant

<div class="card">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card card-body">
        <span> @Model.Location</span>
        <span> @Model.Cuisine</span>
    </div>
